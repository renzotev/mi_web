.slider
	position relative
	z-index 2

	.slides-wrapper
		display none
		text-align center
		position relative
		background url("../img/shadow-top-slider.png") no-repeat center top, url("../img/shadow-bottom-slider.png") no-repeat center bottom
		padding-top 23px
		padding-bottom 40px
		background-size 100% auto
		
		.slidesjs-pagination
			background white
			display inline-block
			text-align center
			text-decoration none
			padding 20px 0
			margin 0
			width 100%
			position relative
			
			&:before,
			&:after
				z-index -1
				position absolute
				content ""
				bottom 15px
				left 10px
				width 50%
				top 80%
				max-width 300px
				background #777
				box-shadow 0 15px 10px #777
				transform rotate(-3deg)
			
			&:after
				transform rotate(3deg)
				right 10px
				left auto
			
			li
				text-align center
				display inline-block
				margin 0 8px
				
				a
					display block
					text-decoration none
					font-size 1px
					width 25px
					height 25px
					background-color  #b0b0b0
					color #b0b0b0
					border-radius 50%
					line-height 25px
					
					&:hover
						background-color  #b0b0b0
						color #b0b0b0
					
					&.active
						background-color red
						color red

